# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=postgres://dev:dev@localhost:5432/alerthistory?sslmode=disable
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=alerthistory
POSTGRES_USER=dev
POSTGRES_PASSWORD=dev

# Redis
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=dev
REDIS_DB=0

# App
APP_PORT=8080
APP_HOST=0.0.0.0
LOG_LEVEL=debug

# Lock settings
LOCK_TTL=30s
LOCK_MAX_RETRIES=3
LOCK_RETRY_INTERVAL=100ms
LOCK_ACQUIRE_TIMEOUT=5s
LOCK_RELEASE_TIMEOUT=2s
LOCK_VALUE_PREFIX=dev

# Cache settings
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_MAX_RETRIES=3
REDIS_MIN_RETRY_BACKOFF=100ms
REDIS_MAX_RETRY_BACKOFF=500ms

# Migration settings
MIGRATION_DIR=./migrations
MIGRATION_DRIVER=postgres
MIGRATION_TABLE=goose_db_version

# Backup settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# Health check settings
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_INTERVAL=30s
