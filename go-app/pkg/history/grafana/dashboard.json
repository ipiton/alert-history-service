{
  "dashboard": {
    "title": "Alert History API - TN-63",
    "tags": ["alert-history", "api", "history"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(alert_history_api_history_http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} {{status_code}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Duration (p95, p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(alert_history_api_history_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(alert_history_api_history_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Cache Hit Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(alert_history_api_history_cache_hits_total[5m]) / (rate(alert_history_api_history_cache_hits_total[5m]) + rate(alert_history_api_history_cache_misses_total[5m]))",
            "legendFormat": "Hit Rate"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Query Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(alert_history_api_history_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{operation}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Filter Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(alert_history_api_history_filters_operations_total[5m])",
            "legendFormat": "{{filter_type}} - {{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(alert_history_api_history_security_events_total[5m])",
            "legendFormat": "{{event_type}} - {{severity}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "HTTP Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(alert_history_api_history_http_errors_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} - {{error_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Active Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "alert_history_api_history_http_active_requests",
            "legendFormat": "Active Requests"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 9,
        "title": "Query Results Count",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(alert_history_api_history_query_results_count_bucket[5m]))",
            "legendFormat": "p95 - {{operation}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "Rate Limit Violations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(alert_history_api_history_security_rate_limit_violations_total[5m])",
            "legendFormat": "{{limit_type}} - {{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      }
    ]
  }
}
